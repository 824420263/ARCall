<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_gravity="center"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="@dimen/dp_270"
        android:layout_height="@dimen/dp_191"
        android:background="@drawable/invite_dialog"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_15"
            android:layout_marginTop="@dimen/dp_32"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="邀请用户"/>

        <org.ar.call.weight.VerificationCodeView
            android:id="@+id/et_invite"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_24"
            app:icv_et_bg_focus="@drawable/invite_dialog_bg"
            app:icv_et_bg_normal="@drawable/invite_dialog_bg"
            app:icv_et_number="4"
            app:icv_et_text_color="#606060"
            app:icv_et_text_size="@dimen/sp_20"
            app:icv_et_width="@dimen/dp_43"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_20"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_invite_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/sp_17"
                android:text="取消"/>

            <TextView
                android:id="@+id/tv_invite_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#40A3FB"
                android:textSize="@dimen/sp_17"
                android:text="确定"></TextView>
        </LinearLayout>

    </LinearLayout>



</RelativeLayout>
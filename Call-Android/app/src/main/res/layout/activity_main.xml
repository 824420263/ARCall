<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_bg"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_180"></ImageView>


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_37"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"
        android:text="AR呼叫邀请场景展示"></TextView>



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/tv_name"
        android:layout_marginTop="@dimen/dp_112"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_login"
            android:layout_width="@dimen/dp_301"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_login_btn"
            android:onClick="Login"
            android:textSize="@dimen/sp_14"
            android:text="登录"
            android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/btn_p2p"
            android:layout_width="@dimen/dp_301"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_login_btn"
            android:onClick="P2P"
            android:textSize="@dimen/sp_14"
            android:text="点对点呼叫邀请"
            android:visibility="gone"
            android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/btn_multiple"
            android:layout_width="@dimen/dp_301"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_18"
            android:background="@drawable/shape_login_btn"
            android:onClick="Multiple"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/sp_14"
            android:text="多人呼叫邀请"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/tv_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_45"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/white"
            android:text="您的呼叫ID:0000"></TextView>
    </LinearLayout>







</RelativeLayout>
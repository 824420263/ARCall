<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_79"
    android:id="@+id/rl_root"
    android:background="@drawable/shape_float_border"
    android:layout_height="@dimen/dp_79">

    <LinearLayout
        android:layout_width="@dimen/dp_64"
        android:layout_height="@dimen/dp_64"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_audio_float"
        android:orientation="vertical">
        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:scaleType="center"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/img_float_phone"></ImageView>

        <Chronometer
            android:id="@+id/chr_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_11"
            android:textColor="#40A3FB"
            android:textSize="@dimen/sp_10"
            ></Chronometer>
    </LinearLayout>



</RelativeLayout>
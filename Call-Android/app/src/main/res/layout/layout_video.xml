<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/fl_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/video_close_bg">

        <ImageView
            android:id="@+id/iv_multi_wait"
            android:layout_width="@dimen/dp_43"
            android:layout_height="@dimen/dp_43"
            android:layout_centerInParent="true"
            android:background="@drawable/loading"/>

        <TextView
            android:id="@+id/tv_multi_unmanned"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_multi_wait"
            android:layout_centerInParent="true"
            android:textSize="@dimen/sp_11"
            android:text="等待接听"
            android:textColor="@color/white" />
    </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_25"
            android:background="@color/layout_video_bg"
            android:layout_above="@+id/fl_video"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_layout_mic"
                android:layout_width="@dimen/dp_11"
                android:layout_height="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_gravity="center"
                android:background="@drawable/mic_open"/>

            <TextView
                android:id="@+id/tv_layout_uid"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="1111"
                android:textSize="@dimen/sp_11"
                android:layout_marginRight="@dimen/dp_6"
                android:layout_marginLeft="@dimen/dp_6"
                android:gravity="center"
                android:textColor="@color/white"/>
        </LinearLayout>
</RelativeLayout>